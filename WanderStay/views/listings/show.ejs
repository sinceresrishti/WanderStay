<% layout("/layouts/boilerplate") %>
<div class="row ">
  <div class="col-8 offset-3 mt-3">
<h3>Listing Details :</h3>
</div>

<div class="card col-6 offset-3 show-card">
<div class="card">
  <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing-image">
  <div class="card-body">
    <p class="card-text"><%= listing.title || "Untitled Listing" %> <br>
      <%= listing.description || "No description provided" %> <br>
      &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "Price not available" %> <br>
      <%= listing.location || "Location not specified" %> <br>
      <%= listing.country || "Country not specified" %>
    </p>
  </div>
</div>
</div>

